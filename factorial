#include <stdio.h>
int main ()
{
  int n, i, fact = 1;
  printf("Enter a positive integer :");
  scanf("%d",&n);
  if(n<0)
  {
    printf("Not a valid number ! Please enter a positive integer ");
  }
  else
  {
  for(i=1; i<=n; i++)
  {
    fact *= i;
  }
  printf ("factorial of %d = %d ",n,fact);
  }
}
